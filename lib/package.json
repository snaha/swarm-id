{
  "name": "@swarm-id/lib",
  "version": "1.0.0",
  "type": "module",
  "description": "Swarm ID library for authentication and Bee API operations",
  "main": "dist/swarm-id.umd.js",
  "module": "dist/swarm-id.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/swarm-id.esm.js",
      "require": "./dist/swarm-id.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./dist/swarm-id-client.js",
      "types": "./dist/swarm-id-client.d.ts"
    },
    "./proxy": {
      "import": "./dist/swarm-id-proxy.js",
      "types": "./dist/swarm-id-proxy.d.ts"
    },
    "./auth": {
      "import": "./dist/swarm-id-auth.js",
      "types": "./dist/swarm-id-auth.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "swarm",
    "identity",
    "authentication",
    "bee",
    "web3"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ethersphere/bee-js": "^7.0.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "prettier": "^3.6.2",
    "rollup": "^4.30.1",
    "tslib": "^2.8.1",
    "typescript": "~5.8.0"
  }
}
